<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.joe2k01.crunchywrap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.joe2k01.crunchywrap.SplashScreenActivity"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.joe2k01.crunchywrap.SearchResultActivity"
            android:parentActivityName="io.github.joe2k01.crunchywrap.MainActivity"
            android:theme="@style/ActionBarTheme" />
        <activity
            android:name="io.github.joe2k01.crunchywrap.StreamingActivity"
            android:theme="@style/AppTheme.StreamingTheme" />
        <activity
            android:name="io.github.joe2k01.crunchywrap.AnimeActivity"
            android:parentActivityName="io.github.joe2k01.crunchywrap.MainActivity"
            android:theme="@style/ActionBarTheme" />
        <activity
            android:name="io.github.joe2k01.crunchywrap.MainActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
    </application>

</manifest>